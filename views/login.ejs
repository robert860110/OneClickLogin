<%- include('partials/header') %>

<div class="form-container" id = "login-sendCode">
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if(locals.success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
    <form>
        <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
            <input id="login-phone_number" type="text" class="form-control" name="phone_number" value="<%= locals.phone_number || '' %>" placeholder="mobile number">
        </div>
        <div class="form-group">
            <button id = "btn-sendCode" type="button" class="btn btn-success">Send Code</button>
        </div>
    </form>
</div>


<div class="form-container" id = "login-submit">
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if(locals.success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
    <form method="post">
        <p></p>
        <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input id="login-password" type="text" class="form-control" name="password" value="" placeholder="SMS confirmation code">
        </div>
        <div class="form-group">
            <button id = "btn-goback" type="button" class="btn btn-secondary">Go Back</button> <button type="submit" class="btn btn-success">Login</button>
        </div>
    </form>
</div>

<script>
$(document).ready(function(){
    $("#btn-sendCode").click(function(){
        $("#login-submit").show();
        $("#login-sendCode").hide();
    });
    $("#btn-goback").click(function(){
        $("#login-submit").hide();
        $("#login-sendCode").show();
    });
});
</script>


<%- include('partials/footer') %>